<component name="ca.firstvoices.test.doctypes">
    <require>org.nuxeo.ecm.core.CoreExtensions</require>
    <require>org.nuxeo.ecm.directory.GenericDirectory</require>

    <extension target="org.nuxeo.ecm.core.schema.TypeService" point="schema">
        <schema name="confusable_characters" prefix="confusable_characters" override="true" src="schemas/confusable_characters.xsd"/>
    </extension>

    <extension target="org.nuxeo.ecm.directory.GenericDirectory" point="directories">
        <directory name="confusable_characters" extends="template-directory" append="true">
            <schema>confusable_characters</schema>
            <autoincrementIdField>false</autoincrementIdField>
            <idField>id</idField>
            <createTablePolicy>always</createTablePolicy>
<!--            <table>studio_vocabulary_confusable_characters</table>-->
            <dataFile>confusable_characters.csv</dataFile>
<!--            <cacheEntryName>vocab-confusable_characters-cache</cacheEntryName>-->
<!--            <cacheEntryWithoutReferencesName>vocab-confusable_characters-cache-without-references</cacheEntryWithoutReferencesName>-->
        </directory>
    </extension>

</component>
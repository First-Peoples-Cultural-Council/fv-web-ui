<?xml version="1.0"?>
<component name="fv-maintenance-alphabet-operations-contrib" version="1.0">

  <require>fv-maintenance-services-contrib</require>

  <extension point="operations" target="org.nuxeo.ecm.core.operation.OperationServiceComponent">
    <operation class="ca.firstvoices.maintenance.dialect.alphabet.operations.CleanConfusables"/>
    <operation class="ca.firstvoices.maintenance.dialect.alphabet.operations.AddConfusables"/>
    <operation class="ca.firstvoices.maintenance.dialect.alphabet.operations.ConfusablesStatus"/>
  </extension>

  <!-- Block Operation from being visible to non admins -->
  <extension target="org.nuxeo.ecm.automation.server.AutomationServer" point="bindings">
    <binding name="Alphabet.CleanConfusables">
      <administrator>true</administrator>
    </binding>
    <binding name="Alphabet.AddConfusables">
      <administrator>true</administrator>
    </binding>
  </extension>

</component>
